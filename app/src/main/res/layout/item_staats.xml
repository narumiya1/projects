<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue_500"
        android:orientation="vertical"
        android:padding="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/first_name_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="First"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/last_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="Last"
                    android:textColor="@color/white"
                    android:textSize="28sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/team_st"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:text="Lakers"
                android:textColor="@color/white"
                android:textSize="28sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@color/blue_grey_50"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position : "
                    android:textColor="@color/light_blue_900"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/position_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sixth Man "
                    android:textColor="@color/light_blue_900"
                    android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="19dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View in "
                    android:textColor="@color/light_blue_900"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/season_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chart "
                    android:textColor="@color/light_blue_900"
                    android:textSize="16dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"

            android:background="@color/blue_grey_50"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white">

            <TextView
                android:id="@+id/home_score_st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:text="Home Team "
                android:textColor="@color/light_blue_900"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                  "
                android:textColor="@color/purple_700"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/visitor_score_st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Visitor Team "

                android:textColor="@color/light_blue_900"

                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@color/blue_grey_50"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/home_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:text="100"
                    android:textColor="@color/light_blue_900"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="   "
                    android:textColor="@color/purple_700"
                    android:textSize="16dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/visitor_st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/light_blue_900"
                android:textSize="18dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:background="@color/blue_grey_50"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="played at : "
                android:textStyle="italic"
                android:textColor="@color/light_blue_900"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"

                android:layout_marginTop="8dp"
                android:background="@color/blue_grey_50"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/white"
                android:outlineSpotShadowColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="Statistics / Game"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Assist "
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/assist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="Block "
                        android:textColor="@color/light_blue_900"

                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="40dp"
                        android:gravity="right"

                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="Dribble "
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/dribble"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="FGA"
                        android:textColor="@color/light_blue_900"


                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/fga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="FTA "
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/fta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="FTM"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/ftm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="Points "
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/pointo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="Rebound "
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/reboundto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="Steal"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/steal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="40dp"
                        android:text="Turnover"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/turnover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:gravity="right"
                        android:text="19"
                        android:textColor="@color/light_blue_900"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>